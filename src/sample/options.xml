<?xml version="1.0" encoding="utf-8"?>

<options>
  <!-- side-wide options -->
  <option name="site.title">XML-to-Bootstrap</option>
  <option name="site.author">Achim Christ</option>
  <option name="site.url">//localhost:8000/publish/</option>

  <!-- the following options will be exported to JavaScript -->
  <export type="js">
    <option name="navbarOffset">240</option>
    <option name="navbarTolerance">5</option>
  </export>

  <!-- stylesheets to import -->
  <option name="cdn.stylesheets">
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <!--link rel="stylesheet" href="//cdn.rawgit.com/twbs/bootstrap/v4-dev/dist/css/bootstrap.css" /-->
    <!--link rel="stylesheet" href="css/font-awesome.min.css" /-->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" />
  </option>

  <!-- scripts to import -->
  <option name="cdn.scripts">
    <script src="//code.jquery.com/jquery-2.2.3.min.js" />
    <script><![CDATA[window.jQuery || document.write('<script src="/js/jquery.min.js"><\/script>')]]></script>
    <!--script src="js/bootstrap.min.js" /-->
    <script src="//cdn.rawgit.com/twbs/bootstrap/v4-dev/dist/js/bootstrap.js" />
    <!--script src="//cdnjs.cloudflare.com/ajax/libs/headroom/0.7.0/headroom.min.js" /-->
  </option>

  <!-- social links -->
  <option name="site.sociallinks">
    <sociallink rel="license" href="//creativecommons.org/licenses/by/4.0/">fa-creative-commons</sociallink>
    <sociallink href="//github.com/acch">fa-github</sociallink>
    <sociallink href="//github.com/acch/feedback">fa-envelope</sociallink>
  </option>
</options>
